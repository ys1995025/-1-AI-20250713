.create-container {
  padding: 16px;
}

/* 输入区域 */
.input-section {
  margin-bottom: 24px;
  position: relative;
}

/* 标题样式 */
.section-title {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 8px;
}

.prompt-input {
  width: 100%;
  min-height: 128px;
  padding: 12px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 14px;
  line-height: 1.5;
  box-sizing: border-box;
  background-color: #ffffff;
}

.negative-input {
  width: 100%;
  height: 48px;
  padding: 12px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 14px;
  background-color: #ffffff;
}

.char-count {
  position: absolute;
  bottom: 8px;
  right: 12px;
  font-size: 12px;
  color: var(--text-color-light);
}

/* 风格标签 */
.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 24px;
}

.style-tag {
  padding: 6px 12px;
  background-color: #f0f0f0;
  border-radius: 999px;
  font-size: 14px;
  color: var(--text-color);
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  height: 48px;
  background-color: var(--primary-color);
  color: white;
  border-radius: 8px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16px;
}

.generate-btn.generating {
  background-color: #7ba7e1;
}

.generate-btn[disabled] {
  background-color: #cccccc;
  color: #999999;
}

.loading-icon {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid #ffffff;
  border-radius: 50%;
  margin-right: 8px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 