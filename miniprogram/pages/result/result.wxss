/* 重新生成按钮 */
.regenerate-btn {
  width: 100%;
  height: 48px;
  background-color: #f0f0f0;
  color: var(--text-color);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin-bottom: 16px;
}

.refresh-icon {
